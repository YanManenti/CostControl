<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTrip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundBlue"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/criarNovaViagem"
            android:textColor="@color/surfaceWhite"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/customyellowbutton"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="3dp"
                            android:contentDescription="@string/configuracoesgeraisDescription"
                            android:src="@drawable/settings_24px"
                            app:tint="@color/surfaceOrange"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/configuracoesgerais"
                            android:textColor="@color/surfaceOrange"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/destino"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@id/destinoInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custominputbackground"
                        android:hint="@string/destinoPlaceholder"
                        android:inputType="text"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/numeroViajantes"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@id/numeroViajantesInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custominputbackground"
                        android:hint="@string/numeroViajantesPlaceholder"
                        android:inputType="number"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/duracaoDias"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@id/duracaoDiasInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custominputbackground"
                        android:hint="@string/duracaoDiasPlaceholder"
                        android:inputType="number"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/customyellowbutton"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical|start"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:contentDescription="@string/combustivelDescription"
                            android:src="@drawable/local_gas_station_24px"
                            app:tint="@color/surfaceOrange"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/combustivel"
                            android:textColor="@color/surfaceOrange"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            >
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@id/combustivelCheckbox"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:scaleX="1.25"
                            android:scaleY="1.25"
                            app:buttonTint="@color/surfaceOrange"
                            />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/totalEstimadoQuilometros"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@id/totalEstimadoQuilometrosInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custominputbackground"
                        android:hint="@string/totalEstimadoQuilometrosPlaceholder"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/mediaQuilometrosLitro"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@id/mediaQuilometrosLitroInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custominputbackground"
                        android:hint="@string/mediaQuilometrosLitroPlaceholder"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/custoMedioLitro"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@id/custoMedioLitroInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custominputbackground"
                        android:hint="@string/custoMedioLitroPlaceholder"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/totalVeiculos"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@id/totalVeiculosInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custominputbackground"
                        android:hint="@string/totalVeiculosPlaceholder"
                        android:inputType="number"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text="@string/custo"
                            android:textAlignment="textEnd"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="@string/rs"
                            android:textAlignment="textEnd"
                            android:textColor="@color/surfaceOrange"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@id/custoCombustivel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zeroValue"
                            android:textAlignment="textEnd"
                            android:inputType="numberDecimal"
                            android:textColor="@color/surfaceOrange"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/customyellowbutton"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginEnd="5dp"
                                android:contentDescription="@string/tarifaAereaDescription"
                                android:src="@drawable/airplane_ticket_24px"
                                app:tint="@color/surfaceOrange"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tarifaAerea"
                                android:textColor="@color/surfaceOrange"
                                android:textSize="24sp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                >
                                <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@id/tarifaAereaCheckbox"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="5dp"
                                    android:scaleX="1.25"
                                    android:scaleY="1.25"
                                    app:buttonTint="@color/surfaceOrange"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/custoEstimadoPessoa"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@id/custoEstimadoPessoaInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custominputbackground"
                        android:hint="@string/custoEstimadoPessoaPlaceholder"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/aluguelVeiculo"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@id/aluguelVeiculoInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custominputbackground"
                        android:hint="@string/aluguelVeiculoPlaceholder"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text="@string/custo"
                            android:textAlignment="textEnd"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="@string/rs"
                            android:textAlignment="textEnd"
                            android:textColor="@color/surfaceOrange"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@id/custoTarifaAerea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zeroValue"
                            android:textAlignment="textEnd"
                            android:textColor="@color/surfaceOrange"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/customyellowbutton"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="5dp"
                            android:contentDescription="@string/refeicoesDescription"
                            android:src="@drawable/fastfood_24px"
                            app:tint="@color/surfaceOrange"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/refeicoes"
                            android:textColor="@color/surfaceOrange"
                            android:textSize="24sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            >
                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@id/refeicoesCheckbox"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="5dp"
                                android:scaleX="1.25"
                                android:scaleY="1.25"
                                app:buttonTint="@color/surfaceOrange"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/custoEstimadoRefeicao"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@id/custoEstimadoRefeicaoInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custominputbackground"
                        android:hint="@string/custoEstimadoRefeicaoPlaceholder"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/refeicoesDia"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@id/refeicoesDiaInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custominputbackground"
                        android:hint="@string/refeicoesDiaPlaceholder"
                        android:inputType="number"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text="@string/custo"
                            android:textAlignment="textEnd"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="@string/rs"
                            android:textAlignment="textEnd"
                            android:textColor="@color/surfaceOrange"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@id/custoRefeicoes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zeroValue"
                            android:textAlignment="textEnd"
                            android:textColor="@color/surfaceOrange"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/customyellowbutton"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="5dp"
                            android:contentDescription="@string/hospedagemDescription"
                            android:src="@drawable/hotel_24px"
                            app:tint="@color/surfaceOrange"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hospedagem"
                            android:textColor="@color/surfaceOrange"
                            android:textSize="24sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            >
                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@id/hospedagemCheckbox"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="5dp"
                                android:scaleX="1.25"
                                android:scaleY="1.25"
                                app:buttonTint="@color/surfaceOrange"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/custoMedioNoite"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@id/custoMedioNoiteInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custominputbackground"
                        android:hint="@string/custoMedioNoitePlaceholder"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/totalNoites"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@id/totalNoitesInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custominputbackground"
                        android:hint="@string/totalNoitesPlaceholder"
                        android:inputType="number"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="@string/totalQuartos"
                        tools:ignore="RtlSymmetry" />

                    <EditText
                        android:id="@id/totalQuartosInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/custominputbackground"
                        android:hint="@string/totalQuartosPlaceholder"
                        android:inputType="number"
                        android:padding="10dp"
                        tools:ignore="Autofill" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text="@string/custo"
                            android:textAlignment="textEnd"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:text="@string/rs"
                            android:textAlignment="textEnd"
                            android:textColor="@color/surfaceOrange"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@id/custoHospedagem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zeroValue"
                            android:textAlignment="textEnd"
                            android:textColor="@color/surfaceOrange"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/customyellowbutton"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        tools:ignore="TooManyViews,UseCompoundDrawables">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="2dp"
                            android:contentDescription="@string/entretenimentoDescription"
                            android:src="@drawable/attractions_24px"
                            app:tint="@color/surfaceOrange"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/entretenimento"
                            android:textColor="@color/surfaceOrange"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:paddingStart="5dp"
                            android:text="@string/nomeEntretenimento"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="15dp"
                            android:text="@string/precoEntretenimento"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@id/entretenimentoContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@id/adicionarBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/customorangebutton"
                        android:text="@string/adicionar"
                        android:textColor="@color/surfaceWhite"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text="@string/custo"
                            android:textAlignment="textEnd"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
